<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/beaut"
    tools:context="com.example.brianb.demo1.MainActivity">
<ImageView
    android:layout_width="130dp"
    android:layout_height="140dp"
    android:src="@drawable/logo"
    />
    <EditText
        android:id="@+id/usrname"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColorHint="#8c8c8c"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:background="#f0ffffff"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="@string/username"
        android:fontFamily="serif"
        android:drawableLeft="@drawable/usrname"
        android:drawableStart="@drawable/usrname"
        />
    <EditText
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColorHint="#8c8c8c"
        android:textSize="16sp"
        android:maxLines="1"
        android:singleLine="true"
        android:background="#f0ffffff"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:fontFamily="serif"
        android:drawableLeft="@drawable/usr1"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f0ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:padding="0dp"
        >
        <Spinner
            android:id="@+id/spinner_select"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dropdown"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/passText"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColorHint="#8c8c8c"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:fontFamily="serif"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#f0ffffff"
        android:drawableLeft="@drawable/pass1"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/cpass"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:textColorHint="#8c8c8c"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:fontFamily="serif"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#f0ffffff"
        android:drawableLeft="@drawable/confpass"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="18sp"
        android:background="#c041c4"
        android:text= "@string/register"
        android:padding= "8dp"
        android:fontFamily="cursive"
        android:textColor="@color/pureWhite"
        android:clickable="true"
        android:onClick="onClickButton" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:text="@string/signIn_text"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fb30c607"
            android:onClick="to_login"
            android:linksClickable="true"
            android:textAlignment="center"
            android:id="@+id/signIn_string"
            />

    </LinearLayout>
</LinearLayout>
